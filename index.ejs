<% layout("/layouts/boilerplate") %>
<body>
    <h3>All Listings!!</h3>

<!-- creating cards loop...card create hoga har listings ke lie & inc their images too from db -->
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <% for(let listing of allListings ) { %>
        <!-- anchor tag to make images clickage and redirecting to new page -->
    <a href="/listings/<%= listing._id %>" class="listing-link" >
    <div class="card col listing-card">
  <img 
  src="<%= listing.image.url %>" 
  class="card-img-top" alt="listing_image" 
  style="height: 20rem;" 
  />
  <!-- bhai ab photo ke upper text dikhega -->
  <div class="card-img-overlay">HK</div>
  <div class="card-body">
    <p class="card-text">
        <b><%= listing.title  %></b> <br/>
        &#8377; <%= listing.price ? Number(listing.price).toLocaleString("en-IN") : "N/A" %> / night
    </p>
  </div>
</div>
</a>
<%} %>
</div>
